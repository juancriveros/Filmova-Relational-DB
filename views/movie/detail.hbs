<!-- 16:9 aspect ratio -->
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" rel="stylesheet">

<div class="container">
    <div class="row">
        <div class="embed-responsive embed-responsive-16by9" >
            <iframe class="embed-responsive-item" src="https://player.vimeo.com/video/137857207" id="movieframe"
                allowfullscreen></iframe>
        </div>
    </div>
    <div class="row">
        <h1>{{movie.0.title}}</h1>
    </div>
    <div class="row">
        <div class="col-2">
            <img class="img-responsive img-fluid z-depth-1" width="100%" src="/images/HarryPotterOne.jpg">
        </div>
        <div class="col-8">
            <ul>
                <li>
                    <input id="generalRating" name="generalRating-1" class="rating rating-loading" value="{{movie.0.generalRating}}"
                        data-show-clear="false" data-show-caption="true">
                </li>
                <li> Release Date: {{movie.0.releaseDate}} </li>
                <li> Category: {{movie.0.category}}</li>
                <li> Director: {{movie.0.movieDirector}}</li>
            </ul>
        </div>
    </div>
    </br>
    <div class="row">
        <div class="col-12">
            <form action="/filmova/detail" method="POST">
                <div class="form-group">
                    <div class="card rating">
                        <div class="card-header">Your Rating</div>
                        <div class="card-body">
                            <input type="hidden" value="{{movie.0._id}}"  name="movieId" />
                            <input type="hidden" value="{{movie.0.externalId}}" id="idmovie" name="externalId" />
                            <input id="userRating" name="userRating" class="rating rating-loading" value="5"
                                data-show-clear="false" data-show-caption="true">
                            </br>
                            <div class="form-group">
                                <label for="title">Comment Title</label>
                                <input type="text" class="form-control" id="title" name="title"
                                    aria-describedby="emailHelp" placeholder="Title" required>
                            </div>
                            <div class="form-group">
                                <label for="comment">Comment</label>
                                <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
                            </div>
                            </br>
                            <button type="submit" class="new-tweet btn btn-primary mb-2 float-right">Submit</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        {{#each movie.0.ratings}}
        <div class="col-12">
            <div class="twitterCard">
                <div class="card-header">
                    <p class="card-text"><strong>{{this.title}}</strong></p>
                </div>
                <div class="card-body">
                    <input class="rating rating-loading commentsRating" value="{{this.rating}}" data-show-clear="false"
                        data-show-caption="true">
                        <br>
                    <p class="card-text">{{this.comment}}</p>

                </div>
                <div class="card-header">
                    <p class="card-text"><small>Juan Riveros - {{this.commentDate}}</small></p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>